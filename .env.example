# Application Settings
APP_NAME="Shopify Price Manager API"
DEBUG=false

# Database
# SQLite (default for development)
DATABASE_URL=sqlite:///./shopify_app.db

# PostgreSQL (production recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/shopify_db

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/shopify_db

# Shopify Configuration
SHOPIFY_SHOP=your-shop.myshopify.com
SHOPIFY_TOKEN=shpca_your_admin_api_token_here
SHOPIFY_API_VERSION=2026-01

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_api_key_here

# SNKRDUNK Settings
SNKRDUNK_CACHE_TTL_HOURS=6

# Collection IDs
DEFAULT_COLLECTION_ID=444175384827
BOOSTER_COLLECTION_ID=444116140283

# Location Settings
LOCATION_ID=81755177211
LOCATION_NAME=H. Halvorsens vei 5

# Pricing Rules
SHIPPING_COST_JPY=500.0
MIN_MARGIN=0.20
VAT_RATE=0.25
ROUND_UP_STEP_NOK=25
MIN_PRICE_CHANGE_NOK=25.0
PACK_MIN_PRICE_CHANGE_NOK=10.0
MASSIVE_CHANGE_NOK=500.0

# Booster Rules
DEFAULT_PACKS_PER_BOX=30
PACK_MARKUP=1.20

# Filtering
EXCLUDE_TITLE_SUBSTRING=one piece
DISREGARD_BOX_IF_NO_SHRINK=true
PACK_TITLE_MAX_JPY=2000

# Matching
SHOPIFY_MATCH_THRESHOLD=0.62
PRICE_OK_BAND_NOK=25
